{
  "name": "Spring + PostgreSQL Dev",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "dev",
  "workspaceFolder": "/workspace",
  "extensions": [
    "vscjava.vscode-maven",
    "vscjava.vscode-java-debug",
    "vscjava.vscode-java-pack",
    "dbaeumer.vscode-eslint",
    "VisualStudioExptTeam.vscodeintellicode",
    "VisualStudioExptTeam.intellicode-api-usage-examples",
    "redhat.java",
    "Pleiades.java-extension-pack-jdk",
    "mhutchie.git-graph",
    "cweijan.vscode-postgresql-client2",
    "donjayamanne.githistory",
    "zaaack.markdown-editor",
    "jebbs.plantuml",
    "qhoekman.language-plantuml",
    "rangav.vscode-thunder-client"
  ],
  "settings": {
    "java.configuration.runtimes": [
      {
        "name": "JavaSE-17",
        "path": "/usr/local/sdkman/candidates/java/current",
        "default": true
      }
    ]
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y curl && curl -fsSL https://deb.nodesource.com/setup_18.x | sudo bash - && sudo apt-get install -y nodejs && sudo npm install -g @angular/cli && echo 'Ambiente pronto!'"

}
